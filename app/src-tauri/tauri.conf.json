{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "YDH Desktop",
  "version": "0.1.0",
  "identifier": "dev.ydatahouse.desktop",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build:frontend",
    "devUrl": "http://localhost:5173",
    "frontendDist": "dist"
  },
  "app": {
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APP/vault/**"
          ]
        }
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; media-src 'self' asset: http://asset.localhost"
    },
    "windows": [
      {
        "title": "YDH Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/icon.png"
    ]
  },
  "plugins": {}
}
